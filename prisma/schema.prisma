// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  firstName     String   @db.VarChar(255)
  lastName      String   @db.VarChar(255)
  email         String   @unique @db.VarChar(255)
  emailVerified Int      @db.Int
  emailToken    Int      @db.Int
  resPassword   Int      @db.Int
  resPassToken  Int      @db.Int
  password      String   @db.VarChar(255)
  registeredAt  DateTime @default(now())
  role          Role     @default(EDITOR)
  writtenPosts  Post[]   @relation("WrittenPosts")
  favoritePosts Post[]   @relation("FavPosts")
  Tour          Tour[]
}

model Post {
  postId        Int      @id @default(autoincrement())
  postCreatedAt DateTime @default(now())
  postUpdatedAt DateTime @updatedAt
  author        User     @relation("WrittenPosts", fields: [authorId], references: [id])
  authorId      Int
  favoritedBy   User?    @relation("FavPosts", fields: [favoritedById], references: [id])
  favoritedById Int?
  tour          Tour?    @relation(fields: [tourId], references: [tourId])
  tourId        Int?
}

model Tour {
  tourId          Int      @id @default(autoincrement())
  tourName        String
  tourDescription String?
  tourCreatedAt   DateTime @default(now())
  tourUpdatedAt   DateTime @updatedAt
  tourPosts       Post[]
  tourAuthor      User     @relation(fields: [authorId], references: [id])
  authorId        Int
}

enum Role {
  USER
  ADMIN
}
